#include "main.h"
#include "elevator.h"
#include "stepper.h"
#include "button.h"
#include "sensor.h"
#include "fnd.h"
#include "stm32f4xx_hal.h"

UART_HandleTypeDef huart1;
UART_HandleTypeDef huart2;
uint8_t rxData1;

Elevator_t elevator;
ButtonSet_t buttonSet;

int main(void){
    HAL_Init();
    SystemClock_Config();
    MX_GPIO_Init();
    MX_USART1_UART_Init();
    MX_USART2_UART_Init();

    Stepper_Init();
    Elevator_Init(&elevator);
    Button_Init(&buttonSet);
    Sensor_EXTI_Init();
    FND_Update(elevator.currentFloor);

    HAL_UART_Receive_IT(&huart1,&rxData1,1);

    while(1){
        Elevator_Update(&elevator);
        Button_Update(&buttonSet);

        if(rxData1>='0' && rxData1<='9'){
            uint8_t num = rxData1-'0';
            switch(num){
                case 1: Button_ExternalPressed(&buttonSet,BUTTON_1_UP); break;
                case 2: Button_ExternalPressed(&buttonSet,BUTTON_2_DOWN); break;
                case 3: Button_ExternalPressed(&buttonSet,BUTTON_3_DOWN); break;
            }
            rxData1=0;
        }

        if(HAL_GPIO_ReadPin(EMG_STOP_GPIO_Port,EMG_STOP_Pin)){
            Stepper_Stop();
            HAL_GPIO_WritePin(BUZZER_GPIO_Port,BUZZER_Pin,GPIO_PIN_SET);
        }else{
            HAL_GPIO_WritePin(BUZZER_GPIO_Port,BUZZER_Pin,GPIO_PIN_RESET);
        }
    }
}

void HAL_UART_RxCpltCallback(UART_HandleTypeDef *huart){
    if(huart->Instance==USART1)
        HAL_UART_Receive_IT(&huart1,&rxData1,1);
}
