
#include "rcCar.h"
#include "main.h"





void rcCar( char data)
{
	for( uint8_t i =0; i<4 ; i++)
	{
		if (data == 'a')
		{
			TIM3->CCR1 = 125;
		}

		else if(data== 'd')
		{
			TIM3->CCR2 = 125;
		}
		else if(data== 'w')
		{
			TIM3->CCR3 = 125;
		}
		else if(data == 's' )
		{
			TIM3->CCR4 = 125;
		}
		else
		{
			TIM3->CCR1 = 0;
			TIM3->CCR2 = 0;
			TIM3->CCR3 = 0;
			TIM3->CCR4 = 0;
		}


	}


}
